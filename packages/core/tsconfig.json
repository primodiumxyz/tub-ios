{
  "compilerOptions": {
    "paths": {
      "@core/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*"],
  "references": [{ "path": "../contracts" }],
  "skipLibCheck": true,
  "target": "ESNext",
  "allowJs": true,
  "moduleDetection": "force",
  "isolatedModules": true,
  "verbatimModuleSyntax": false
}
