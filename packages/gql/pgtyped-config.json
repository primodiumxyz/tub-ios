{
  "transforms": [
    {
      "mode": "sql",
      "include": "src/timescale/queries/**/*.sql",
      "emitTemplate": "{{dir}}/{{name}}.queries.ts"
    },
    {
      "mode": "sql",
      "include": "src/timescale/mutations/**/*.sql",
      "emitTemplate": "{{dir}}/{{name}}.mutations.ts"
    }
